# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal
bindsym Print exec gscreenshot

# change keyboard layout
bindsym Mod1+Shift+k mode "$mode_keymap"
set $mode_keymap (b)r abnt2, (u)s , us (i)nternational 
mode "$mode_keymap" {
bindsym b exec --no-startup-id ~/.config/i3/br_keymap , mode "default"
    bindsym u exec --no-startup-id ~/.config/i3/us_keymap , mode "default"
    bindsym i exec --no-startup-id ~/.config/i3/us_intl_keymap , mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}


# Set shut down, restart and locking features
bindsym $mod+Shift+e mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id "~/.config/polybar/exit.sh lock", mode "default"
    bindsym s exec --no-startup-id "~/.config/polybar/exit.sh suspend", mode "default"
    bindsym u exec --no-startup-id "~/.config/polybar/exit.sh switch_user", mode "default"
    bindsym e exec --no-startup-id "~/.config/polybar/exit.sh logout", mode "default"
    bindsym h exec --no-startup-id "~/.config/polybar/exit.sh hibernate", mode "default"
    bindsym r exec --no-startup-id "~/.config/polybar/exit.sh reboot", mode "default"
    bindsym Shift+s exec --no-startup-id "~/.config/polybar/exit.sh shutdown", mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
 
